#include "bmp_header.h"

struct pixel{
  unsigned char R, G, B;
};

struct coord{
  unsigned int x, y;
};

struct cluster{
  unsigned int nr_elem, ind;
  struct coord sj;
  struct coord ds; //coordonate colturi stanga-jos si dreapta-sus ale unui cluster
};

struct param_clus{
  FILE* f;
  struct pixel **m, ref, off;
  unsigned int h, w;
  double P;
  unsigned int **a;
  struct cluster* v;
  unsigned int *nr;
};
